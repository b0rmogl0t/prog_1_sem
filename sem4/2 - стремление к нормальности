import numpy as np
import matplotlib.pyplot as plt
import matplotlib as mpl
fig = plt.figure(figsize = (10,7))
ax1 = fig.add_subplot(311) 
ax2 = fig.add_subplot(312) 
ax3 = fig.add_subplot(313)


ax1.hist(np.random.normal(0, 10, 1000), 150)
ax1.grid()

ax2.hist(np.random.normal(0, 10, 10000), 150)
ax2.grid()

ax3.hist(np.random.normal(0, 10, 100000), 150)
ax3.grid()
